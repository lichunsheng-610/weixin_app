.list-scroll-view {
    width: 100vw;
    height: 100%;
}

.list-scroll-view-right {
    width: 90vw;
    height: 100%;
}

.list_main {
    width: 100vw;
    height: 100vh;
    background-color: #ebebeb;
}

.list_header {
    width: 100vw;
    height: 150px;
}

.list_img {
    width: 100%;
    height: 100%;
}

::-webkit-scrollbar {
    /* width: 0;
    height: 0;
    color: transparent; */
    display: none;
}

.list-left-menu {
    display: flex;
    flex-direction: column;
    width: 20vw;
    /* position: fixed; */
    left: 0;
    /* top: 0; */
    z-index: 10;
    background-color: #fff;
}

.list-menu-name, .list-menu-name-selected {
    width: 100%;
    height: 70px;
    box-sizing: border-box;
}

.list-menu-name {
    padding-left: 15px;
    padding-top: 12px;
}

.list-menu-name-selected {
    height: 100px;
    padding-left: 11px;
    padding-top: 42px;
    border-left: 5px solid #aaa;
    background-color: #ebebeb;
}

.list-menu-name-text {
    width: 45px;
    height: 50px;
    /* padding-top: 12px; */
}

.list-right {
    display: flex;
    flex-direction: column;
    height:2025px;
    width: 80vw;
    background-color: #ebebeb;
    position: absolute;
    left: 20vw;
    padding-left: 10px;    
    padding-right: 10px;
    box-sizing: border-box;
}

.list_item_data {
    width: 100%;
    height: 100px;
    margin-top: 10px;
    border: 1px solid #fff;
    border-radius: 6px;
    background-color: #fff;
    box-shadow: 3px 3px 3px #c0c0be;
}
